---
import Slider from './Slider.astro';
---

<section class="banners">
    <Slider />
</section>

<style>
/* Slider Container */
.banners {
    margin-block-start: 0;
    overflow: hidden;
    position: relative;
    width: 100%;
    height: 100%;
}

.banner-slider {
    display: flex;
    align-items: center;
}

.banner-slider-item {
    transition: all 300ms cubic-bezier(0.55, 0.085, 0.68, 0.53) 0s;
    box-shadow: rgb(0 0 0 / 69%) 0px 26px 30px -10px, rgb(0 0 0 / 73%) 0px 16px 10px -10px;
    position: relative;
    cursor: pointer;
    width: 90vw;
    height: 150px;
    margin: 0 auto;
    flex-shrink: 0;
    margin-block-end: 3rem;
}


.banner-slider-item::after {
    border: 4px solid transparent;
    inset: 0;
    content: "";
    position: absolute;
    transition: border 150ms linear 0s;
    border-radius: 4px;
}

.slide-overlay {
    position: absolute;
    top: 40px;
    left: 20px;
    width: 40%;
}

.slide-img {
    border-radius: 4px;
    height: 150px;
    width: 100%;
    object-fit: cover;
}

.slide-h4 {
    position: absolute;
    bottom: 10%;
    left: 6.5%;
    color: var(--white);
    font-size: .65rem;
    font-weight: 100;
    letter-spacing: normal;
    opacity: 1;
}

@media screen and (min-width: 500px) {

    .slide-overlay {
        top: 10px;
        left: 20px;
        width: 35%;
    }
    .slide-h4 {
        bottom: 12%;
        left: 5%;
    }
}

@media screen and (min-width: 768px) {

    
    .banner-slider-item {
        transition: all 300ms cubic-bezier(0.55, 0.085, 0.68, 0.53) 0s;
        height: 100%;
    }

    .slide-overlay {
        top: 15px;
        left: 60px;
        width: 30%;
    }

    .slide-img {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .slide-h4 {
        bottom: 10%;
        left: 9.8%;
        font-size: 1rem;
    }

}

@media screen and (min-width: 1024px) {


    /* Banner Hover */
 
    .banner-slider-item:hover::after {
        border: 4px solid var(--border-hover);
    }

    /* Translate Overlay Title */

    .slide-overlay {
        opacity: 0;
        top: 15px;
        left: 100px;
        width: 30%;
        transition: transform 700ms cubic-bezier(0.25, 0.46, 0.45, 0.94) 150ms;
    }
    
    .slide-overlay.active {
        opacity: 1;
        transform: translateX(-30px);
        animation: opacityTitleSlider 1000ms;
    }

    /* Opacity Info Overlay */

    .slide-h4 {
        bottom: 7%;
        left: 7%;
        opacity: 0;
    }
    
    .slide-h4.visible{
        opacity: 1;
        animation: opacityTextSlider 2500ms;
    }
}

@media screen and (min-width: 1440px) {


    .banner-section {
        margin-block-start: 1rem;
    }

    .slide-overlay.active {
        top: 50px;
        left: 155px;
        width: 28%;
        transform: translateX(-40px);
        transition: transform 700ms cubic-bezier(0.25, 0.46, 0.45, 0.94) 150ms;
    }

    .slide-h4 {
        bottom: 10%;
        left: 7%;
        font-size: 1.20rem;
        font-weight: 500;
    }
}

@media screen and (min-width: 1920px) {


    .slide-overlay.active {
        top: 60px;
        left: 200px;
        width: 28%;
        transform: translateX(-60px);
        transition: transform 700ms cubic-bezier(0.25, 0.46, 0.45, 0.94) 150ms;
    }

    .slide-h4 {
        bottom: 10%;
        left: 4%;
        font-size: 1.5rem;
    }
}
</style>