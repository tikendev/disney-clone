{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
        "@components/*": ["./src/components/*"],
        "@shared/*": ["./src/components/shared/*"],
        "@home/*": ["./src/components/home/*"],
        "@icons/*": ["./src/components/icons/*"],
        "@styles/*": ["./src/styles/*"],
        "@layouts/*": ["./src/layouts/*"],
        "@config/*": ["./src/config/*"],
        "@data/*": ["./src/data/*"],
        "@helpers/*": ["./src/helpers/*"],
        "@images/*": ["./src/assets/images/*"],
        "@/*": ["./src/*"]
    }
  }
}